<div class="box box-primary">
  <!-- /.box-header -->
  <!-- form start -->
  <%= form_with(model: book, local: true) do |form| %>
    <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-4">
      <div class="box-body">
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control", placeholder: "aaa" %>
        </div>
      </div>
    </div>
    <div class="col-xs-2">
      <div class="box-body">
        <div class="form-group">
          <%= form.label :stock %>
          <%= form.number_field :stock, class: "form-control", placeholder: "Estoque" %>
        </div>
      </div>
    </div>

    <div class="col-xs-3">
      <div class="box-body">
        <div class="form-group">
          <%= form.label :author_id %>
          <%= collection_select(:book, :author_id, Author.all, :id, :name, {prompt: "Selecione um autor"}, {class: "form-control"})%>
        </div>
      </div>
    </div>

    <div class="col-xs-3">
      <div class="box-body">
        <div class="form-group">
          <%= form.label :category_id %>
          <%= collection_select(:book, :category_id, Category.all, :id, :name, {prompt: "Selecione uma categoria"}, {class: "form-control"})%>
        </div>
      </div>
    </div>

  </div>

    <div class="box-footer">
      <%= form.submit %>
    </div>
  <%end%>
</div>
